<div class="form-box p-3">
  <h2>パスワード再設定</h2>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field mb-3">
      <%= f.label :password, "新しいパスワード" %><br />
      <% if @minimum_password_length %>
        <em>(最低 <%= @minimum_password_length %> 文字で入力してください)</em><br />
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="field mb-3">
      <%= f.label :password_confirmation, "新しいパスワード(確認用)" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
    </div>

    <div class="actions mb-3">
      <%= f.submit "パスワード再設定", class: "btn btn-warning shadow" %>
    </div>
  <% end %>

  <%= render "users/shared/links" %>
</div>