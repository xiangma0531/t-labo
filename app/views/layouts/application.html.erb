<!DOCTYPE html>
<html>
  <head>
    <title>T-Labo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <label class="header-left">
        <%= link_to 'T-Labo', root_path %>
      </label>
      <ul class="header-right">
        <% if admin_signed_in? %>
          <li class="header-list">
            管理者：<%= current_admin.name %>
          </li>
          <li class="header-list">
            <%= link_to '新規投稿', new_source_path %>
          </li>
          <li class="header-list">
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete %>
          </li>
        <% elsif user_signed_in? %>
          <li class="header-list">
            <%= current_user.name %>
          </li>
          <li class="header-list">
            <%= link_to '新規投稿', new_source_path %>
          </li>
          <li class="header-list">
            <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
          </li>
        <% else %>
          <li class="header-list">
            <%= link_to 'ログイン', new_user_session_path %>
          </li>
          <li class="header-list">
            <%= link_to '新規登録', new_user_registration_path %>
          </li>
        <% end %>
      </ul>
    </header>

    <div class="main">
      <div class="grid">
        <%= yield %>
      </div>
    </div>

    <footer class="footer">
      <ul class="footer-buttons">
        <li class="footer-button">
          <%= link_to root_path do %>
            <%= image_tag "home.png"%><br>
            ホーム
          <% end %>
        </li>
        <li class="footer-button">
          <%= link_to rooms_path do %>
            <%= image_tag "message.png"%><br>
            DM
          <% end %>
        </li>
        <li class="footer-button">
          <%= link_to likes_path do %>
            <%= image_tag "star.png"%><br>
            いいね
          <% end %>
        </li>
        <li class="footer-button footer-avator">
          <% if user_signed_in? %>
            <%= link_to user_path(current_user.id) do %>
              <% if current_user.image.attached? %>
                <%= image_tag current_user.image.variant(resize: '20x20') %>
              <% else %>
                <%= image_tag "default_avator.png" %>
              <% end %>
              <br>
              マイページ
            <% end %>
          <% else %>
            <%= link_to new_user_session_path do %>
              <%= image_tag "default_avator.png" %>
              <br>
              ログイン
            <% end %>
          <% end %>
        </li>
      </ul>
    </footer>
  </body>
</html>
