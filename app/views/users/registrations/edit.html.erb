<div class="form-box">
  <h4>ユーザー情報編集 <%= resource_name.to_s.humanize %></h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名(ニックネーム可)" %>
    </div>

    <div class="field">
      <%= f.label :grade_id %><br />
      <%= f.collection_select :grade_id, Grade.all, :id, :name, {include_blank: "校種を選択してください"} %>
    </div>

    <div class="field">
      <%= f.label :subject_id %><br />
      <%= f.collection_select :subject_id, Subject.all, :id, :name, {include_blank: "教科を選択してください"} %>
    </div>

    <div class="field">
      <%= f.label :course_id %><br />
      <%= f.collection_select :course_id, Course.all, :id, :name, {include_blank: "科目を選択してください"} %>
    </div>

    <%# <div class="field">
      <%= f.label :image <em>アバター画像を設定できます</em><br />
      <%= f.file_field :image 
    </div> %>
    
    <div class="field">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, cols: "50", rows: "5", placeholder: "自己紹介文を入力してください" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i><span style="font-size: small;">(変更しない場合は空欄にしてください)</span></i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em>※最低<%= @minimum_password_length %>文字</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i><span style="font-size: small;">(変更を適用するには現在のパスワードを入力してください)</span></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更 新", class: "btn" %>
    </div>
  <% end %>

  <hr>
  <h4>アカウント削除</h4>
  <div id="openModal">
    アカウントを削除する
  </div>

  <%= link_to "戻 る", :back, class: "btn" %>

</div>

<%# 削除確認モーダルウィンドウ %>
  <section id="modalArea" class="modalArea">
    <div id="modalBg" class="modalBg"></div>
    <div class="modalWrapper">
      <div class="modalContents">
        アカウントを削除します。<br />
        よろしいですか？
      </div>
      <div class="modal-btns">
        <%= link_to registration_path(resource_name), class: "btn modal-del-btn", method: :delete do %>
          削除する
        <% end %>
        <div id="closeModal" class="btn modal-btn">
          キャンセル
        </div>
      </div>
    </div>
  </section>
<%# 削除確認モーダルウィンドウ %>