<div class="p-3">
  <h2>チャットルーム一覧</h2>

  <div class="rooms">
    <% @rooms.each do |room| %>
      <div class="room p-2">
        <%= link_to "#{room.user.name}さんとのチャット", room_path(room.room_id) %>
        <p>未読<%= room.room.yet_messages(current_user) %>件</p>
        <p><%= link_to  "ルーム削除", room_path(room.room_id), method: :delete %></p>
      </div>
    <% end %>
  </div>
</div>