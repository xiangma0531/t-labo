<% if current_user != user %>
  <div id="follow-button-<%= user.id %>">
    <% if user_signed_in? && current_user.following?(user) %>
      <%= link_to relationship_path(user.id), class: 'btn unfollow', method: :delete, remote: true do %>
        フォロー解除
      <% end %>
    <% else %>
      <%= link_to relationships_path(id: user.id), class: 'btn follow', method: :post, remote: true do %>
        フォローする
      <% end %>
    <% end %>
  </div>
<% end %>