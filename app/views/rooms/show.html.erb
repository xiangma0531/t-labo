<% @entries.where.not(user_id: current_user.id).each do |entry| %>
  <h1><%= entry.user.name %>さんとのDM</h1>
<% end %>

<div class="message-main">
  <div class="messages">
    <% if @messages.present? %>
      <% @messages.each do |message| %>
        <% if message.user_id == current_user.id %>
          <div class="message mine-message">
            <%= message.message %>
          </div>
        <% else %>
          <div class="message others-message">
            <%= message.message %>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <h3>メッセージはまだありません</h3>
    <% end %>
  </div>
</div>

<hr>

<%= form_for @message do |f| %>
  <div class="field">
    <%= f.text_area :message, placeholder: 'メッセージを入力してください', rows: '2', class: "room-field" %>
  </div>
  <%= f.hidden_field :room_id, value: @room.id %>
  <div class="actions">
    <%= f.submit '送信', class: 'room-actions btn' %>
  </div>
<% end %>