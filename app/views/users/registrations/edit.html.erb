<div class="form-box">
  <h4>ユーザー情報編集 <%= resource_name.to_s.humanize %></h4>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= render 'layouts/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名(ニックネーム可)" %>
    </div>

    <div class="field">
      <%= f.label :grade_id %><br />
      <%= f.collection_select :grade_id, Grade.all, :id, :name, {include_blank: "校種を選択してください"} %>
    </div>

    <div class="field">
      <%= f.label :subject_id %><br />
      <%= f.collection_select :subject_id, Subject.all, :id, :name, {include_blank: "教科を選択してください"} %>
    </div>

    <div class="field">
      <%= f.label :course_id %><br />
      <%= f.collection_select :course_id, Course.all, :id, :name, {include_blank: "科目を選択してください"} %>
    </div>

    <div class="field">
      <%= f.label :image %><em>アバター画像を設定できます</em><br />
      <%= f.file_field :image %>
    </div>
    
    <div class="field">
      <%= f.label :introduction %><br />
      <%= f.text_area :introduction, cols: "50", rows: "5", placeholder: "自己紹介文を入力してください" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(変更しない場合は空欄にしてください)</i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <em>※最低<%= @minimum_password_length %>文字</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更 新", class: "btn" %>
    </div>
  <% end %>

  <hr>
  <h4>アカウント削除</h4>
  <%= button_to "アカウントを削除する", registration_path(resource_name), data: { confirm: "アカウントを削除します。\nこれまでのデータは全て削除されます。\nよろしいですか？" }, method: :delete %>

  <%= link_to "戻 る", :back, class: "btn" %>
</div>