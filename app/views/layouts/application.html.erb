<!DOCTYPE html>
<html>
  <head>
    <title>T-Labo</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="header">
      <label class="header-left">
        <%= link_to 'T-Labo', root_path, class: "logo" %>
      </label>
      <ul class="header-right">
        <% if user_signed_in? %>
          <%# <li class="footer-button">
            <%= link_to root_path do 
              <%= image_tag "home.png", class: "footer-icon"<br>
              <span class="footer-icon-caption">ホーム</span>
            <% end 
          </li> %>
          <li class="footer-button">
            <%= link_to new_source_path do %>
              <%= image_tag "post.png", class: "footer-icon"%><br>
              <span class="footer-icon-caption">新規投稿</span>
            <% end %>
          </li>
          <li class="footer-button">
            <%= link_to rooms_path do %>
              <%= image_tag "message.png", class: "footer-icon"%><br>
              <span class="footer-icon-caption">DM</span>
            <% end %>
          </li>
          <li class="footer-button">
            <%= link_to likes_path do %>
              <%= image_tag "star.png", class: "footer-icon"%><br>
              <span class="footer-icon-caption">いいね</span>
            <% end %>
          </li>
          <li class="footer-button">
            <%= link_to user_path(current_user.id) do %>
              <% if current_user.image.attached? %>
                <%= image_tag "default_avator.png", class: "footer-avator" %>
                <%# <%= image_tag current_user.image.variant(resize: '20x20') %>
              <% else %>
                <%= image_tag "default_avator.png", class: "footer-avator" %>
              <% end %>
              <br>
              <span class="footer-icon-caption">マイページ</span>
            <% end %>
          </li>
        <% else %>
          <li class="footer-button">
            <%= link_to new_user_session_path do %>
              <%= image_tag "login.png", class: "footer-icon" %>
              <br>
              <span class="footer-icon-caption">ログイン</span>
            <% end %>
          </li>
          <li class="footer-button">
            <%= link_to new_user_registration_path do %>
              <%= image_tag "registration.png", class: "footer-icon" %>
              <br>
              <span class="footer-icon-caption">新規登録</span>
            <% end %>
          </li>
        <% end %>
      </ul>
      <%# <ul class="header-right">
        <% if admin_signed_in? 
          <li class="header-list">
            管理者：<%= current_admin.name 
          </li>
          <li class="header-list">
            <%= link_to '新規投稿', new_source_path 
          </li>
          <li class="header-list">
            <%= link_to 'ログアウト', destroy_admin_session_path, method: :delete 
          </li>
        <% elsif user_signed_in? 
          <li class="header-list">
            <%= link_to new_source_path, class: "btn header-btn" do 
              新規投稿
            <% end 
          </li>
        <% else 
          <li class="header-list">
            <%= link_to new_user_registration_path, class: "btn header-btn" do 
              新規登録
            <% end 
          </li>
        <% end 
      </ul> %>
    </header>

    <div class="main">
      <div class="grid">
        <%= yield %>
      </div>
    </div>

    <%# <footer class="footer">
      <ul class="footer-buttons">
